{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "baseUrl": ".",
        "paths": {
            "@prisma/generated/*": [
                "./generated/prisma/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "generated/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}